       function getcustomerData() {
           var url = 'http://localhost:50223/api/cusomer';
           $.getJSON(url, null, function seccess(data) {
               $("#tblEmployeeInfo tbody").empty();
               $.each(data,function(index,value){
                   var newRow="<tr><td>"+data[index].CustomerName+"</td><td>"+data[index].CompanyName+"</td><td>"+data[index].City+"</td><td><span class='editButton'>Edit</span></td><tr>";
                   $("#tblEmployeeInfo tbody").append(newRow);
               })
               
           });
       }
    </script>
    }
